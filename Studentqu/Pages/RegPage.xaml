<Page x:Class="Studentqu.Pages.RegPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Studentqu.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="RegPage">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>


        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>

        </Grid.ColumnDefinitions>

        <Label Content="Введите логин" Grid.Row="0" Grid.Column="0" HorizontalAlignment="Right" VerticalAlignment="Center"/>
        <Label Content="Пароль" Grid.Row="1"  Grid.Column="0" HorizontalAlignment="Right" VerticalAlignment="Center"/>
        <Label Content="Подтвердите пароль" Grid.Row="2" Grid.Column="0" HorizontalAlignment="Right" VerticalAlignment="Center"/>
        <Label Content="Выберите роль" Grid.Row="3" Grid.Column="0" HorizontalAlignment="Right" VerticalAlignment="Center"/>



        <TextBox x:Name="TextBoxLogin" TextWrapping="Wrap"  Width="139" VerticalAlignment="Center" HorizontalAlignment="Left"  ToolTip="Введите логин" Grid.Column="1"/>


        <PasswordBox x:Name="PasswordBox" Width="138" VerticalAlignment="Center" HorizontalAlignment="Left" PasswordChar="*" ToolTip="Введите пароль"  Grid.Row="1" Grid.Column="1"/>


        <PasswordBox x:Name="PasswordBoxAgain"  Width="138" VerticalAlignment="Center" HorizontalAlignment="Left" PasswordChar="*" ToolTip="Введите пароль еще раз" Grid.Row="2" Grid.Column="1"/>

        <ComboBox x:Name="RoleBox" Background="Transparent"  Width="139" VerticalAlignment="Center" HorizontalAlignment="Left" ToolTip="Выберите роль" Grid.Column="1"  Grid.Row="3" RenderTransformOrigin="0.742,0.502" />




        <Button Content="Отмена" x:Name="ButtonCancel" Click="ButtonCancel_Click"  ToolTip="Кнопка отмены" Height="36" VerticalAlignment="Top" HorizontalAlignment="Right" Grid.Row="5" Grid.Column="0"/>
        <Button Content="Регистрация" x:Name="ButtonRegister" Click="ButtonRegister_Click" ToolTip="Кнопка регистрации" Height="34" VerticalAlignment="Top" HorizontalAlignment="Left" Grid.Row="5" Grid.Column="1"/>

    </Grid>
</Page>
