<Page x:Class="Studentqu.Pages.TestPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Studentqu.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="TestPage">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="90"/>
            <RowDefinition Height="90"/>
            <RowDefinition Height="90"/>
            <RowDefinition Height="90"/>
            <RowDefinition Height="90"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200"/>
            <ColumnDefinition Width="400"/>
            <ColumnDefinition Width="200"/>
        </Grid.ColumnDefinitions>
        <TextBlock x:Name="question" Grid.Column="1" Grid.Row="0" Text="" VerticalAlignment="Center" HorizontalAlignment="Center" TextWrapping="Wrap"/>

        <RadioButton x:Name="first" Grid.Row="1" Grid.Column="1" HorizontalAlignment="Left" VerticalAlignment="Center" Checked="first_Checked"/>
        <TextBlock x:Name="txfirst" Grid.Column="1" Grid.Row="1" Text="" VerticalAlignment="Center" HorizontalAlignment="Left" TextWrapping="Wrap" Grid.ColumnSpan="2" Margin="15,0,0,0"/>

        <RadioButton x:Name="second" Grid.Row="2" Grid.Column="1" HorizontalAlignment="Left" VerticalAlignment="Center" Checked="second_Checked"/>
        <TextBlock x:Name="txsecond" Grid.Column="1" Grid.Row="2" Text="" VerticalAlignment="Center" HorizontalAlignment="Left" TextWrapping="Wrap" Grid.ColumnSpan="2" Margin="15,0,0,0"/>

        <RadioButton x:Name="third" Grid.Row="3" Grid.Column="1" HorizontalAlignment="Left" VerticalAlignment="Center" Checked="third_Checked"/>
        <TextBlock x:Name="txthird" Grid.Column="1" Grid.Row="3" Text="" VerticalAlignment="Center" HorizontalAlignment="Left" TextWrapping="Wrap" Grid.ColumnSpan="2" Margin="15,0,0,0"/>

        <RadioButton x:Name="fourth" Grid.Row="4" Grid.Column="1" HorizontalAlignment="Left" VerticalAlignment="Center" Checked="fourth_Checked"/>
        <TextBlock x:Name="txfourth" Grid.Column="1" Grid.Row="4" Text="" VerticalAlignment="Center" HorizontalAlignment="Left" TextWrapping="Wrap" Grid.ColumnSpan="2" Margin="15,0,0,0"/>

    </Grid>
</Page>
